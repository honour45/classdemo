<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".kong_jian">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <RadioGroup
        android:id="@+id/kongjian_rg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/kongjian_rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项一"
            />
        <RadioButton
            android:id="@+id/kongjian_rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项二"
            />
        <RadioButton
            android:id="@+id/kongjian_rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项三"
            />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="问题"/>

        <RadioGroup
            android:id="@+id/kongjian_rg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RadioButton
                android:id="@+id/kongjian_rb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选项一"/>
            <RadioButton
                android:id="@+id/kongjian_rb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选项二"/>
            <RadioButton
                android:id="@+id/kongjian_rb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选项三"/>
            <RadioButton
                android:id="@+id/kongjian_rb7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选项四"/>

        </RadioGroup>

        <Button
            android:id="@+id/kongjian_bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"/>





    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="#000000"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <CheckBox
            android:id="@+id/kongjian_check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获得你的公共信息"/>
        <CheckBox
            android:id="@+id/kongjian_check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寻找你的共同好友"/>
        <CheckBox
            android:id="@+id/kongjian_check3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可以像好友发送信息"/>

    <Button
        android:id="@+id/kongjian_bt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认登录"/>

        <Button
            android:id="@+id/kongjian_bt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消"
            />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>
    </LinearLayout>

    <DatePicker
        android:id="@+id/datepiker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>


    <TextView
        android:id="@+id/kongjina_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textSize="25dp"/>


    <TimePicker
        android:id="@+id/kongjian_tp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>



    <Chronometer
        android:id="@+id/kongjian_chromometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"

        />

    <Button
        android:id="@+id/kongjian_bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/kongjian_bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/kongjian_bt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清零"
        android:textSize="30sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>







    </LinearLayout>

</LinearLayout>



</ScrollView>
